                                    <div class="quotes">
                                        <blockquote>
                                            <b>
                                                Start date : @Html.DisplayFor(model => model.DateDebut)<br />

                                                end date : @Html.DisplayFor(model => model.DateFin)
                                            </b>

                                        </blockquote>
                                    </div>


                                </div>
                            </div>




                        </article>
                    </div>
                </div>
            </div>
        </div>
